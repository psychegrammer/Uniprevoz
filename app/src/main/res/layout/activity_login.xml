<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="#002147">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/logo"
            android:id="@+id/logo2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/password_edittext_login"
            android:background="@android:color/white" android:hint="Lozinka"
            app:layout_constraintTop_toBottomOf="@+id/email_edittext_login"
            app:layout_constraintEnd_toEndOf="@+id/email_edittext_login" app:layout_constraintStart_toStartOf="@+id/email_edittext_login"
            android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email_edittext_login"
            android:background="@android:color/white" android:hint="Korisničko ime"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" tools:layout_editor_absoluteY="270dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="prijavi se"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button_login" android:background="#DAA520"
            android:textColor="@android:color/white" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_edittext_login"
            app:layout_constraintEnd_toEndOf="@+id/password_edittext_login" app:layout_constraintStart_toStartOf="@+id/password_edittext_login"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Nazad na registraciju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_register_textview" android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/login_button_login" app:layout_constraintStart_toStartOf="@+id/login_button_login"
            app:layout_constraintEnd_toEndOf="@+id/login_button_login" android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>